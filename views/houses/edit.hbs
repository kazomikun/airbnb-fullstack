{{> nav}}

    <!-- Form Start -->
    <div class="row">
      <div class="col">
        <!-- Send host a message section -->
        <div class=" m-4 p-4">
          <h1>List a House</h1>
          <form action="/houses/{{house._id}}?_method=PATCH" method="POST">
            <label for="basic-url" class="form-label">Short Title</label>
            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                aria-describedby="basic-addon3"
								value="{{house.title}}"
								name="title"
              />
            </div>

            <div class="mb-3">
              <label for="basic-url" class="form-label">Description</label>

              <textarea class="form-control" rows="6" name="description">{{house.description}}</textarea>
            </div>
            <!-- Rooms Selection -->
            <div class="mb-3">
              <label for="basic-url" class="form-label">Number of Rooms</label>
              <select class="form-select" name="rooms" aria-label="Default select example">
                <option selected>{{house.rooms}}</option>
                <option value="1">1 room</option>
                <option value="2">2 rooms</option>
                <option value="3">3 rooms</option>
                <option value="4">4 rooms</option>
                <option value="5">5 rooms</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="basic-url" class="form-label" name="location">Location</label>
              <select class="form-select" aria-label="Default select example">
                <option selected>{{house.location}}</option>
                <option value="1">Koh Phangan</option>
                <option value="2">Koh Samui</option>
                <option value="3">Bali</option>
              </select>
            </div>

            <!-- Max Price Selection -->
            <div>
              <label for="basic-url" class="form-label">Price(per night)</label>
              <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input
                  type="number"
                  class="form-control"
                  aria-label="max price"
                  aria-describedby="basic-addon1"
									value="{{house.price}}"
									name="price"
                />
              </div>
            </div>
            <!-- Add photos -->
            <label for="basic-url" class="form-label"
              >Add Photos (up to 9)</label
            >
            <div class="input-group mb-1">
              <input
                type="text"
                placeholder="http://..."
                class="form-control"
                id="basic-url"
                aria-describedby="basic-addon3"
								value="{{house.photos.[0]}}"
								name="photos"
              />
            </div>
            <div class="input-group mb-1">
              <input
                type="text"
                placeholder="http://..."
                class="form-control"
                id="basic-url"
                aria-describedby="basic-addon3"
								value="{{house.photos.[1]}}"
								name="photos"
  						/>
            </div>
            <div class="input-group mb-1">
              <input
                type="text"
                placeholder="http://..."
                class="form-control"
                id="basic-url"
                aria-describedby="basic-addon3"
								value="{{house.photos.[2]}}"
								name="photos"
              />
              <div class="input-group mb-1">
                <input
                  type="text"
                  placeholder="http://..."
                  class="form-control"
                  id="basic-url"
                  aria-describedby="basic-addon3"
									value="{{house.photos.[3]}}"
									name="photos"
                />
              </div>
              <div class="input-group mb-1">
                <input
                  type="text"
                  placeholder="http://..."
                  class="form-control"
                  id="basic-url"
                  aria-describedby="basic-addon3"
									value="{{house.photos.[4]}}"
									name="photos"
                />
              </div>
              <div class="input-group mb-1">
                <input
                  type="text"
                  placeholder="http://..."
                  class="form-control"
                  id="basic-url"
                  aria-describedby="basic-addon3"
									value="{{house.photos.[5]}}"
									name="photos"
                />
              </div>
              <div class="input-group mb-1">
                <input
